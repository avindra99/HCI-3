@model HCI_Project.Models.SignLanguageinputViewModel
@{
    ViewData["Title"] = "Home Page";
}

<form asp-action="Index">
    <div class="form-group">
        <label for="exampleInputEmail1">Please enter the text</label>
        <input asp-for="SignInput" class="form-control"  placeholder="Please enter the text"/>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>

    <input type="submit" value="submit" class="btn btn-primary" />

    
</form>
<div>
  
    <input type="button" id="btnPlay" value="Play" />
    <iframe id="video" width="420" height="315" frameborder="0" style="display:none" allowfullscreen></iframe>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">
        $("body").on("click", "#btnPlay", function () {
            
            var url = $("#SignInput").val();
            $.post(url)
            //url = url.split('v=')[1];
            $("#video")[0].src = "//www.youtube.com/embed/" +;
            $("#video").show();
        });
    </script>



</div>
